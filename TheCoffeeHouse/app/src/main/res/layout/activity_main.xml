<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#efeff4"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
      <androidx.cardview.widget.CardView
          android:layout_alignParentTop="true"
          android:layout_width="match_parent"
          android:layout_height="50dp">
         <RelativeLayout
             android:background="#fff"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/chuadangnhap_355"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/icon_left"
                   android:layout_marginLeft="10dp"
                   android:gravity="center"
                   android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
               <Button
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@id/icon_left"
                   android:id="@+id/dangnhap_button"
                   android:layout_marginLeft="10dp"
                   android:textColor="#ea8025"
                   android:textAllCaps="false"
                   android:text="Đăng nhập"
                   android:background="@drawable/bg_button_poster"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="#fff"
                android:id="@+id/signed_355"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/icon_left_2"
                   android:layout_marginLeft="10dp"
                   android:gravity="center"
                   android:drawableLeft="@drawable/ic_user"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
               <TextView
                   android:id="@+id/ten_main_355"
                   android:textColor="#000"
                   android:padding="5dp"
                   android:layout_toRightOf="@+id/icon_left_2"
                   android:text="Nhạn Trần"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:fontFamily="sans-serif-light"
                   android:paddingLeft="5dp"
                   android:layout_below="@id/ten_main_355"
                   android:layout_toRightOf="@+id/icon_left_2"
                   android:text="Khách hàng mới"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_baseline_notifications_none_24"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
         </RelativeLayout>

      </androidx.cardview.widget.CardView>
   <androidx.core.widget.NestedScrollView
       android:id="@+id/scrollView_355"
       android:layout_marginBottom="50dp"
       android:layout_marginTop="50dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <RelativeLayout
             android:layout_marginTop="10dp"
             android:background="#fff"
             android:layout_width="match_parent"
             android:layout_height="120dp">
               <ImageView

                   android:layout_alignParentLeft="true"
                   android:id="@+id/tichdiem"
                   android:layout_marginLeft="40dp"
                   android:src="@drawable/tichdiem"
                   android:layout_width="80dp"
                   android:layout_height="80dp"/>
               <TextView
                   android:textSize="12sp"
                   android:textColor="#000"
                   android:layout_alignParentLeft="true"
                   android:gravity="center"
                   android:layout_below="@+id/tichdiem"
                   android:layout_marginLeft="40dp"
                   android:text="Tích điểm"
                   android:layout_width="80dp"
                   android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/dathang"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dathang_1"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_below="@+id/dathang"
                android:text="Đặt hàng"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/coupon"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/coupon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_below="@+id/coupon"
                android:layout_marginLeft="40dp"
                android:text="Coupon"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
         </RelativeLayout>
         <androidx.recyclerview.widget.RecyclerView
             android:layout_marginLeft="10dp"
             android:id="@+id/rcv_category_355"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
      </LinearLayout>
   </androidx.core.widget.NestedScrollView>
   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:backgroundTint="#fff"
       android:layout_alignParentBottom="true"
       android:id="@+id/bottom_menu"
       app:itemIconTint="@color/color_tab"

       app:itemTextColor="@color/color_tab"
       android:background="?android:attr/windowBackground"
       app:menu="@menu/nav_menu"
       android:layout_width="match_parent"
       android:layout_height="50dp"/>

</RelativeLayout>