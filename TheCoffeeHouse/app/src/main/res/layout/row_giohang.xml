<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/soluong_giohang"
        android:layout_alignParentLeft="true"
        android:textColor="#EA8025"
        android:gravity="center"
        android:text="5"
        android:background="@drawable/bg_soluong_giohang"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:id="@+id/chitiet_giohang_355"
        android:layout_toRightOf="@+id/soluong_giohang"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/name_sp_giohang_355"
            android:textColor="#000"
            android:text="Socola Lúa Mạch đá xay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tongtien_giohang_355"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:text="207.000 đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:layout_below="@+id/name_sp_giohang_355"
            android:id="@+id/size_giohang_355"
            android:text="Lớn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/size_giohang_355"
            android:textSize="12sp"
            android:hint="Bạn muốn dặn dò gì không (50 kí tự)"
            android:padding="5dp"
            android:id="@+id/ghichu_giohang_355"
            android:drawableLeft="@drawable/ic_resource_new"
            android:background="@null"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
    <View
        android:layout_below="@id/chitiet_giohang_355"
        android:id="@+id/line1"
        android:layout_marginLeft="30dp"
        android:background="#757575"
        android:layout_width="400dp"
        android:layout_height="0.5dp"/>
</RelativeLayout>