<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginTop="10dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="280dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="-5dp"
            android:id="@+id/image_355"
            android:src="@drawable/test"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:lineHeight="20dp"
            android:id="@+id/Title_355"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:text="Cảm ơn bạn, vì đã luôn là 1 bản nguyên khác biệt..."
            android:textColor="#1F1F1F"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="6dp"
            android:lineHeight="18dp"
            android:id="@+id/noidung_355"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="3"
            android:textSize="12sp"
            android:text="@string/noidung"
            android:textColor="#1E1E1E" />

        <Button
            android:id="@+id/btn_355"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button_poster"
            android:fontFamily="sans-serif-light"
            android:text="Chi tiết"
            android:textAllCaps="false"
            android:textColor="#ffa525"
            android:textSize="12sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>